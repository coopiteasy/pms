<odoo>
    <record id="pms_room_type_view_search" model="ir.ui.view">
        <field name="name">pms.room.type.search</field>
        <field name="model">pms.room.type</field>
        <field name="inherit_id" ref="pms.pms_room_type_view_search"/>
        <field name="arch" type="xml">
            <xpath expr="//search" position="inside">
                <filter string="Published" name="published" domain="[('is_published', '=', True)]"/>
            </xpath>
        </field>
    </record>

    <record model="ir.ui.view" id="pms_room_type_view_tree">
        <field name="name">pms.room.type.tree</field>
        <field name="model">pms.room.type</field>
        <field name="inherit_id" ref="pms.pms_room_type_view_tree"/>
        <field name="arch" type="xml">
            <field name="default_code" position="after">
                <field name="website_id" groups="website.group_multi_website" optional="show"/>
                <field name="is_published" string="Is Published" widget="boolean_toggle" optional="hide"/>
            </field>
        </field>
    </record>

    <record model="ir.ui.view" id="pms_room_type_view_form">
        <field name="name">pms.room.type.form</field>
        <field name="model">pms.room.type</field>
        <field name="inherit_id" ref="pms.pms_room_type_view_form" />
        <field name="arch" type="xml">
            <field name="class_id" position="after">
                <field name="is_published" widget="boolean_toggle" />
            </field>
            <xpath expr="//group[@name='accounting_group']/.." position="after">
                <group colspan="4">
                    <field name="short_description" />
                    <field name="long_description" />
                </group>
            </xpath>
        </field>
    </record>
</odoo>
